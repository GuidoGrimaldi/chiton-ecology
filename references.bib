@article{gomez-pazo2021,
  title = {Tracking Clast Mobility Using {{RFID}} Sensors on a Boulder Beach in {{Galicia}}, {{NW Spain}}},
  author = {{G{\'o}mez-Pazo}, Alejandro and {P{\'e}rez-Alberti}, Augusto and Trenhaile, Alan},
  year = {2021},
