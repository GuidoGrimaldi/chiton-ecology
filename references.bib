@article{chapman2002,
  title = {Patterns of Spatial and Temporal Variation of Macrofauna under Boulders in a Sheltered Boulder Field},
  author = {Chapman, M. G.},
  year = {2002},
  month = apr,
  journal = {Austral Ecology},
  volume = {27},
