@article{lehir2005,
  title = {Macrofaunal Diversity and Habitat Structure in Intertidal Boulder Fields},
  author = {Le Hir, Maryvonne and Hily, Christian},
  year = {2005},
  month = jan,
  journal = {Biodiversity \& Conservation},
  volume = {14},
  number = {1},
