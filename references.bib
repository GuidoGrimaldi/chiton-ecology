@article{kalb2015,
  title = {The {{Red}}-{{Fluorescing Marine Fish}} {{{\emph{Tripterygion}}}}{\emph{ Delaisi}} Can {{Perceive}} Its {{Own Red Fluorescent Colour}}},
  author = {Kalb, Nadine and Schneider, Ralf F. and Sprenger, Dennis and Michiels, Nico K.},
  editor = {Herberstein, M.},
  year = {2015},
