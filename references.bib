@article{kingston2018,
  title = {Evidence for Spatial Vision in {{{\emph{Chiton}}}}{\emph{ Tuberculatus}} , a Chiton with Eyespots},
  author = {Kingston, Alexandra C. N. and Chappell, Daniel R. and Speiser, Daniel I.},
