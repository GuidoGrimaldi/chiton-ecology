  keywords = {Biofluorescence,fluorescence caracterization,Frogs,important reference work,Terrestrial,tetrapods,Vertebrates}
}

@article{thrane2014,
  title = {The {{Absorption}} of {{Light}} in {{Lakes}}: {{Negative Impact}} of {{Dissolved Organic Carbon}} on {{Primary Productivity}}},
  shorttitle = {The {{Absorption}} of {{Light}} in {{Lakes}}},
  author = {Thrane, Jan-Erik and Hessen, Dag O. and Andersen, Tom},
  year = {2014},
